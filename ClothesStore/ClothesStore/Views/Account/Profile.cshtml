@model ClothesStore.Models.ProfileViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_SideBarAccount.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Thông tin cá nhân</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
        }

        .content {
            padding-left: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control-plaintext {
            font-size: 16px;
        }

        .table th, .table td {
            text-align: center;
        }

        .table th {
            background-color: #f1f1f1;
        }

        .table-bordered td, .table-bordered th {
            border: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .row .col-md-9 {
            padding-left: 50px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- Content -->
            <div class="col-md-9 content">
                <h2>Thông tin cá nhân</h2>

                <!-- Chỉ hiển thị thông tin cá nhân mà không cho phép chỉnh sửa -->
                <div class="form-group row">
                    <label for="FullName" class="col-sm-3 col-form-label">Họ tên:</label>
                    <div class="col-sm-9">
                        <span class="form-control-plaintext" id="FullName">@Model.FullName</span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="PhoneNumber" class="col-sm-3 col-form-label">Số điện thoại:</label>
                    <div class="col-sm-9">
                        <span class="form-control-plaintext" id="PhoneNumber">@Model.PhoneNumber</span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Address" class="col-sm-3 col-form-label">Địa chỉ:</label>
                    <div class="col-sm-9">
                        <span class="form-control-plaintext" id="Address">@Model.Address</span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="DateOfBirth" class="col-sm-3 col-form-label">Ngày sinh:</label>
                    <div class="col-sm-9">
                        <span class="form-control-plaintext" id="DateOfBirth">
                            @(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : string.Empty)
                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Gender" class="col-sm-3 col-form-label">Giới tính:</label>
                    <div class="col-sm-9">
                        <span class="form-control-plaintext" id="Gender">@Model.Gender</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


