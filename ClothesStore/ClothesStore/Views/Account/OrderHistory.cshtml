@model ClothesStore.Models.ProfileViewModel

@{
    Layout = "~/Views/Shared/_SideBarAccount.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lịch sử đơn hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
        }

        .content {
            padding-left: 30px;
        }

        .table th, .table td {
            text-align: center;
        }

        .table th {
            background-color: #f1f1f1;
        }

        .table-bordered td, .table-bordered th {
            border: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- Content -->
            <div class="col-md-12 content">
                <h2>Lịch sử đơn hàng</h2>
                @if (Model.Order == null || !Model.Order.Any())
                {
                    <p>Không có đơn hàng.</p>
                }
                else
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái</th>
                                <th>Tổng tiền</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Order)
                            {
                                <tr>
                                    <td>@order.OrderID</td>
                                    <td>@order.CreatedAt</td>
                                    <td>@order.Status.ToString().Replace("_", " ")</td>
                                    <td>@order.TotalAmount</td>
                                    <td>@Html.ActionLink("Xem chi tiết", "OrderDetail", "Orders", new { orderId = order.OrderID }, null)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
