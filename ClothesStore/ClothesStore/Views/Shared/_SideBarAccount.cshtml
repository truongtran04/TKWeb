<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
        }

        .sidebar {
            background-color: #343a40;
            color: #fff;
            padding: 30px;
            border-radius: 10px;
            min-height: 100vh;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

            .sidebar h4 {
                color: #fff;
                margin-bottom: 30px;
                font-size: 1.5rem;
            }

            .sidebar a {
                color: #ddd;
                text-decoration: none;
                font-weight: 500;
                display: block;
                margin: 15px 0;
                padding: 10px 15px;
                border-radius: 8px;
                transition: background-color 0.3s ease, padding-left 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #007bff;
                    color: #fff;
                    padding-left: 20px;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .content {
            padding-left: 30px;
        }

        .table th, .table td {
            text-align: center;
        }

        .table th {
            background-color: #f1f1f1;
        }

        .table-bordered td, .table-bordered th {
            border: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="sidebar">
                    <h4>Chào mừng!</h4>
                    <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Trang chủ</a>
                    <a href="@Url.Action("EditProfile", "Account")"><i class="fas fa-user-edit"></i> Chỉnh sửa thông tin</a>
                    <a href="@Url.Action("OrderHistory", "Account")"><i class="fas fa-history"></i> Lịch sử đơn hàng</a>
                    <a href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                </div>
            </div>

            <!-- Content -->
            <div class="col-md-9 content">
                @RenderBody()  <!-- Render nội dung của từng view ở đây -->
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
